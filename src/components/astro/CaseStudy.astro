---
import Layout from '../../layouts/Layout.astro';
import '../../styles/variables.css';
import laptopMockup from '../../assets/MaskGroup2.png';
---

<Layout>
	<section class="hero">
		<div class="hero__purple-section">
			<div class="hero__content">
				<p class="hero__eyebrow">PORTFOLIO</p>
				<h3 class="hero__headline">
					Case study
				</h3>
				<p class="hero__supporting">
					Explore our recent work that showcases our commitment to quality and innovation.
				</p>
				<a href="#" class="hero__cta">
					<span>PREBERI VEÄŒ</span>
					<svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path d="M4 12L12 4M12 4H6M12 4V10" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
					</svg>
				</a>
			</div>
		</div>

		<div class="hero__white-section">
			<div class="hero__media-wrapper">
				<img src={laptopMockup.src} alt="MacBook Air mockup" class="hero__laptop" loading="lazy" />
				<div class="hero__project-info">
					<div class="hero__dots">
						<span class="hero__dot hero__dot--active"></span>
						<span class="hero__dot"></span>
						<span class="hero__dot"></span>
					</div>
					<p class="hero__project-title">Client, Project title</p>
				</div>
			</div>
		</div>
	</section>
</Layout>

<style>
	.hero {
        background-color: #fff;
		color: #000;
		margin: 0;
		position: relative;
		overflow: hidden;
		min-height: 100vh;
		display: grid;
		grid-template-columns: 1fr;
		grid-template-rows: 1fr;
	}

	.hero__purple-section {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: var(--unnamed-color-885dfd, #885dfd);
        clip-path: polygon(0 0, 100% 0, 100% 30%, 0 75%);
		z-index: 1;
	}

	.hero__white-section {
		position: relative;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		align-items: flex-end;
		justify-content: center;
		padding-right: clamp(2rem, 8vw, 8rem);
		padding-bottom: clamp(4rem, 8vw, 8rem);
		z-index: 2;
	}

	.hero__content {
		max-width: 48rem;
		margin-top: clamp(8rem, 15vw, 12rem);
		margin-left: clamp(64px, 10vw, 140px);
		position: relative;
		z-index: 3;
	}

	.hero__eyebrow {
		margin-bottom: 1.5rem;
		text-align: left;
		font: normal normal normal 14px/16px "PP Telegraf Ultralight";
		letter-spacing: 2.1px;
		color: #FFFFFF;
		text-transform: uppercase;
	}

	.hero__headline {
		margin: 0 0 1.5rem 0;
		text-align: left;
		font: normal normal 800 100px/117px "PP Telegraf";
		letter-spacing: 0px;
		color: #FFFFFF;
		opacity: 1;
	}

	.hero__supporting {
		margin: 1.5rem 0 2.5rem 0;
		max-width: 28rem;
		font-size: clamp(1.125rem, 2.5vw, 1.5rem);
		line-height: 1.6;
		color: rgba(255, 255, 255, 0.9);
		font-family: "PP Telegraf";
	}

	.hero__cta {
		display: inline-flex;
		align-items: center;
		gap: 0.75rem;
		color: #FFFFFF;
		text-decoration: none;
		font: normal normal normal 14px/16px "PP Telegraf Ultralight";
		letter-spacing: 2.1px;
		text-transform: uppercase;
		transition: opacity 0.2s;
	}

	.hero__cta:hover {
		opacity: 0.8;
	}

	.hero__cta svg {
		flex-shrink: 0;
	}

	.hero__media-wrapper {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.hero__laptop {
		width: clamp(400px, 50vw, 776px);
		height: auto;
		max-width: 90%;
		z-index: 2;
		filter: drop-shadow(0 1.75rem 3rem rgba(0, 0, 0, 0.25));
		margin-bottom: 2rem;
		transform: rotate(-5deg);
	}

	.hero__project-info {
		display: flex;
		align-items: center;
		gap: 1.5rem;
		margin-top: 1rem;
		justify-content: center;
	}

	.hero__dots {
		display: flex;
		gap: 0.5rem;
		align-items: center;
	}

	.hero__dot {
		width: 8px;
		height: 8px;
		border-radius: 50%;
		border: 1px solid #000;
		background: transparent;
		display: block;
	}

	.hero__dot--active {
		background: #000;
		border-color: #000;
	}

	.hero__project-title {
		margin: 0;
		font: normal normal normal 16px/24px "PP Telegraf";
		color: #000;
	}

	@media (max-width: 900px) {
		.hero__purple-section {
			clip-path: polygon(0 0, 100% 0, 100% 50%, 0 100%);
		}

		.hero__white-section {
			align-items: center;
			padding: 2rem;
			padding-top: 50vh;
		}

		.hero__content {
			margin: 2rem;
			margin-top: 4rem;
		}

		.hero__headline {
			font-size: clamp(40px, 10vw, 60px);
			line-height: 1.2;
		}

		.hero__laptop {
			transform: none;
			margin-bottom: 1.5rem;
		}

		.hero__project-info {
			flex-direction: column;
			align-items: flex-start;
			gap: 1rem;
		}
	}
</style>